set mail-format {
    from: {{ no_reply_monit_email }}
    subject: $SERVICE $EVENT on {{ ansible_ssh_host }}
    message:
Alert from {{ ansible_ssh_host }}
Date: $DATE
For $SERVICE ($EVENT) and take $ACTION
--------------------------------------
$DESCRIPTION
}

