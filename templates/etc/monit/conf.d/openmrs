check host tomcat-openmrs with address "127.0.0.1"
 stop program = "/bin/systemctl  stop tomcat-openmrs.service"
 start program = "/bin/systemctl start tomcat-openmrs.service"
 if failed ( port {{ monit_openmrs_port }} protocol http  request "/openmrs/ws/rest/v1/session"  
 retry 5 content ='.*\,\"authenticated\"\:false.*') FOR {{ cycles_before_restart }} CYCLES THEN RESTART
 if 3 restarts within 5 cycles then exec /etc/monit/slack_notifications.sh
