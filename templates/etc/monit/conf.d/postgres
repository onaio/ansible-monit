 check process postgresql with pidfile /var/lib/postgresql/{{ postgresql_version }}/main/postmaster.pid
    group database
    start program = "/etc/init.d/postgresql start"
    stop  program = "/etc/init.d/postgresql stop"
 if failed host localhost port 5432 protocol pgsql then restart
 if failed host localhost port 5432 protocol pgsql then exec {{ monit_exec_script_dir }}/{{ monit_default_exec_script }}
 if 5 restarts within 5 cycles then timeout
