check host {{ monit_service_name }} with address "127.0.0.1"
 stop program = "/bin/systemctl  stop {{ monit_service_name }}.service"
 start program = "/bin/systemctl start {{ monit_service_name }}.service"
 if failed ( port {{ monit_openmrs_port }} protocol http  request "{{ monit_request_end_point }}"  
 retry 5 content ={{ monit_content_regex }}) FOR {{ cycles_before_restart }} CYCLES THEN RESTART
 if 3 restarts within 5 cycles then exec /etc/monit/slack_notifications.sh
